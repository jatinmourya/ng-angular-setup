{
  "name": "@jatinmourya/ng-init",
  "version": "1.2.1",
  "main": "dist/index.js",
  "description": "A comprehensive CLI tool to automate Angular project initialization with intelligent version management and prerequisite handling",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node src/index.js",
    "build": "node build.js",
    "prepublishOnly": "npm run build && npm run check-size",
    "check-size": "npm pack --dry-run",
    "check-contents": "npm pack && tar -tzf *.tgz && rm *.tgz"
  },
  "type": "module",
  "bin": {
    "ng-init": "./dist/index.js"
  },
  "keywords": [
    "angular",
    "cli",
    "automation",
    "project-generator",
    "angular-cli",
    "scaffolding",
    "nvm",
    "node-version",
    "npm",
    "interactive",
    "project-setup",
    "boilerplate",
    "template",
    "angular-project",
    "development-tools"
  ],
  "author": "jatinmourya",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jatinmourya/ng-init.git"
  },
  "bugs": {
    "url": "https://github.com/jatinmourya/ng-init/issues"
  },
  "homepage": "https://github.com/jatinmourya/ng-init#readme",
  "dependencies": {
    "@inquirer/prompts": "^7.10.1",
    "axios": "^1.6.5",
    "chalk": "^5.3.0",
    "commander": "^13.1.0",
    "execa": "^9.6.1",
    "lodash.debounce": "^4.0.8",
    "ora": "^8.0.1",
    "semver": "^7.5.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.27.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
